<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<TerrainDef Name="SS_TerrainBase" Abstract="True">
		<edgeType>FadeRough</edgeType>
		<renderPrecedence>335</renderPrecedence>
		<designationCategory>Floors</designationCategory>
		<constructEffect>ConstructDirt</constructEffect>
		<affordances>
			<li>Light</li>
			<li>Medium</li>
			<li>Heavy</li>
			<li>GrowSoil</li>
			<li>Diggable</li>
		</affordances>
		<filthAcceptanceMask>
			<li>Unnatural</li>
		</filthAcceptanceMask>
    <generatedFilth>Filth_Dirt</generatedFilth>
		<takeFootprints>True</takeFootprints>
	<tools>
      <li>
        <label>dirt</label>
        <capacities>
          <li>KickMaterialInEyes</li>
        </capacities>
        <hediff>DirtInEyes</hediff>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
	</TerrainDef>
	
	<TerrainDef ParentName="SS_TerrainBase">
		<defName>SoilSuper</defName>
		<label>Super Soil</label>
		<description>Grow things faster with this mycelium network prototype.</description>
		<texturePath>SoilSuper</texturePath>
		<pathCost>5</pathCost>
		<layerable>true</layerable>
    <statBases>
      <Beauty>1</Beauty>
      <WorkToBuild>500</WorkToBuild>
    </statBases>
    <costList>
      <Steel>2</Steel>
	  <Cloth>2</Cloth>
	  <Neutroamine>1</Neutroamine>
    </costList>
		<fertility>2.0</fertility>
		<avoidWander>true</avoidWander>
		<terrainAffordanceNeeded>GrowSoil</terrainAffordanceNeeded>
		<researchPrerequisites><li>supersoil</li></researchPrerequisites>
	</TerrainDef>
	
	<TerrainDef ParentName="SS_TerrainBase"> 
		<defName>SoilMega</defName>
		<label>Mega Soil</label>
		<description>Grow things very fast with the help of this bioengineered mycelium network.</description>
		<texturePath>SoilMega</texturePath>
		<pathCost>2</pathCost>
		<layerable>true</layerable>
    <statBases>
      <Beauty>2</Beauty>
      <WorkToBuild>1000</WorkToBuild>
    </statBases>
    <costList>
      <Neutroamine>3</Neutroamine>
	  <MedicineHerbal>2</MedicineHerbal>
      <ComponentIndustrial>1</ComponentIndustrial>
	  <Yayo>1</Yayo>
    </costList>
		<fertility>5.0</fertility>
		<avoidWander>true</avoidWander>
		<terrainAffordanceNeeded>GrowSoil</terrainAffordanceNeeded>
		<researchPrerequisites><li>megasoil</li></researchPrerequisites>
	</TerrainDef>
	
	<TerrainDef ParentName="SS_TerrainBase">
		<defName>SoilHyper</defName>
		<label>Hyper Soil</label>
		<description>Grow things unnaturally fast by using this vastly improved mycelium network.</description>
		<texturePath>SoilHyper</texturePath>
		<pathCost>0</pathCost>
		<layerable>true</layerable>
    <statBases>
      <Beauty>3</Beauty>
      <WorkToBuild>1500</WorkToBuild>
    </statBases>
    <costList>
	  <Plasteel>25</Plasteel>
      <Penoxycyline>3</Penoxycyline>
	  <MedicineIndustrial>1</MedicineIndustrial>
	  <Luciferium>1</Luciferium>
    </costList>
		<fertility>10.0</fertility>
		<avoidWander>true</avoidWander>
		<terrainAffordanceNeeded>GrowSoil</terrainAffordanceNeeded>
		<researchPrerequisites><li>hypersoil</li></researchPrerequisites>
	</TerrainDef>
	
   <TerrainDef ParentName="SS_TerrainBase">
		<defName>UltraSoil</defName>
		<label>Ultra Soil</label>
		<description>It grows fast, very fast and the plants should be fine...we just need to get used to the process of making it. Right? RIGHT?!?</description>
		<texturePath>SoilUltra</texturePath>
		<pathCost>0</pathCost>
		<layerable>true</layerable>
    <statBases>
      <Beauty>5</Beauty>
	  <Cleanliness>0.3</Cleanliness>
      <WorkToBuild>2000</WorkToBuild>
    </statBases>
    <costList>
	  <Uranium>30</Uranium>
	  <Leather_Thrumbo>10</Leather_Thrumbo>
	  <MedicineUltratech>3</MedicineUltratech>
	  <Heart>1</Heart>
    </costList>
		<fertility>50.0</fertility>
		<avoidWander>true</avoidWander>
		<terrainAffordanceNeeded>GrowSoil</terrainAffordanceNeeded>
		<researchPrerequisites><li>ultrasoil</li></researchPrerequisites>
	</TerrainDef>
	
	
</Defs>

